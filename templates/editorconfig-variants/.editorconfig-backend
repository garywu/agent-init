# EditorConfig for Backend/API Projects
# Optimized for server-side applications

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Backend languages (4-space for clear structure)
[*.py]
indent_size = 4
max_line_length = 88

[*.{go,rs}]
indent_size = 4

[*.{java,scala,kt}]
indent_size = 4

# Node.js backend (4-space for server-side clarity)
[*.{js,ts}]
indent_size = 4

# Shell scripts (common in backend for deployment)
[*.{sh,bash}]
indent_size = 4
max_line_length = 120

# API schemas and configs (2-space for readability)
[*.{json,jsonc}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Build files
[Makefile]
indent_style = tab

# Documentation
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# Frontend assets (if any)
[*.{html,css}]

# EditorConfig for Full-Stack Projects
# Handles multiple languages with appropriate standards

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Frontend languages (2-space web standard)
[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{vue,svelte}]
indent_size = 2

[*.{css,scss,sass,less}]
indent_size = 2

[*.{html,htm}]
indent_size = 2

# Backend languages (4-space systems standard)
[*.py]
indent_size = 4
max_line_length = 88

[*.{sh,bash,zsh,fish}]
indent_size = 4
max_line_length = 120

[*.{rb,php,java,c,cpp,h,hpp}]
indent_size = 4

# Go uses tabs (language convention)
[*.go]
indent_style = tab
indent_size = 4

# Rust uses 4 spaces
[*.rs]
indent_size = 4

# Configuration files (2-space for readability)
[*.{json,jsonc}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.toml]
indent_size = 4

[*.ini]
indent_size = 4

# Build files
[Makefile]
indent_style = tab

[*.mk]
indent_style = tab

# Documentation
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# Database
[*.sql]
indent_size = 2
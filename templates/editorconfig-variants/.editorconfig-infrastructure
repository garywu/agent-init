# EditorConfig for Infrastructure/Systems Projects
# Optimized for shell scripts, Python, DevOps tools

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Systems languages (4-space standard)
[*.{sh,bash,zsh,fish}]
indent_size = 4
max_line_length = 120

[*.py]
indent_size = 4
max_line_length = 88

[*.{rb,php}]
indent_size = 4

# Configuration files (2-space for readability)
[*.{yml,yaml}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.toml]
indent_size = 4

# Build files
[Makefile]
indent_style = tab

[*.mk]
indent_style = tab

# Documentation
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# Web assets (if any in infra projects)
[*.{js,ts,html,css}]
indent_size = 2
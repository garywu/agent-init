# EditorConfig for Web/Frontend Projects
# Optimized for JavaScript, TypeScript, CSS, HTML projects

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Web languages (2-space standard)
[*.{js,jsx,ts,tsx,vue,svelte}]
indent_size = 2

[*.{css,scss,sass,less}]
indent_size = 2

[*.{html,htm}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

# Scripts (minimal shell usage in web projects)
[*.{sh,bash}]
indent_size = 2

# Build files
[Makefile]
indent_style = tab

# Documentation
[*.md]
indent_size = 2
trim_trailing_whitespace = false